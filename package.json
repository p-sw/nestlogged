{
  "name": "nestlogged-root",
  "version": "3.6.1",
  "description": "A NestJS Logger Decorator Library",
  "main": "./dist/lib/index.js",
  "repository": "https://github.com/p-sw/nestlogged",
  "author": "Shinwoo PARK",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "main": "pnpm --filter nestlogged",
    "fastify": "pnpm --filter nestlogged-fastify",
    "build:main": "pnpm run main run build",
    "build:fastify": "pnpm run fastify run build",
    "publish:main": "pnpm run main run build && pnpm publish --filter nestlogged --access public",
    "publish:fastify": "pnpm run fastify run build && pnpm publish --filter nestlogged-fastify --access public",
    "pack:main": "pnpm run main run build && pnpm pack --filter nestlogged",
    "pack:fastify": "pnpm run fastify run build && pnpm pack --filter nestlogged-fastify",
    "format": "prettier --write \"./packages/**/*.ts\"",
    "test:main": "pnpm run main exec jest"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
