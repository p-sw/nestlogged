{
  "name": "nestlogged-root",
  "version": "3.6.0",
  "description": "A NestJS Logger Decorator Library",
  "main": "./dist/lib/index.js",
  "repository": "https://github.com/p-sw/nestlogged",
  "author": "Shinwoo PARK",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "main": "pnpm --filter nestlogged",
    "fastify": "pnpm --filter nestlogged-fastify",
    "build:main": "rimraf packages/nestlogged/lib && pnpm run main exec tsc",
    "build:fastify": "rimraf packages/nestlogged-fastify/lib && pnpm run fastify exec tsc",
    "format": "prettier --write \"./packages/**/*.ts\"",
    "test:main": "pnpm run main exec jest"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0"
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
